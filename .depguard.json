{
    "main": {
      "files": [
        "$all",
        "!$test"
      ],
      "listMode": "Strict",
      "allow": [
        "$gostd",
        "github.com/kaibling/apiforge",
        "github.com/dop251/goja",
        "github.com/jackc/pgx/v5",
        "$gomodname"
      ],
      "deny": {
        "reflect": "Who needs reflection"
      }
    },
    "tests": {
      "files": [
        "$test"
      ],
      "listMode": "Lax",
      "deny": {
        "github.com/stretchr/testify": "Please use standard library for tests"
      }
    }
  }