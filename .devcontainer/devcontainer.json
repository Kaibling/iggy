{
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
	//"workspaceFolder": "/",
  "workspaceFolder": "/iggy",
  "runArgs": [
    "--add-host=host.local:host-gateway"
  ],
//   "workspaceMount": "source=${localWorkspaceFolder}/sub-folder,target=/workspace,type=bind",
